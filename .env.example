# Database Configuration (Production)
# Spring Boot 표준 환경변수명 사용 (Relaxed Binding 자동 매핑)
# sslMode=REQUIRED: Docker 내부 통신에서도 SSL 암호화 적용 (MySQL Connector/J 8.0+)
SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3306/trader_db?sslMode=REQUIRED
SPRING_DATASOURCE_DRIVER_CLASS_NAME=com.mysql.cj.jdbc.Driver
SPRING_DATASOURCE_USERNAME=<db_username>
SPRING_DATASOURCE_PASSWORD=<db_password>

# Logging Configuration (Production)
LOG_FILE_PATH=./logs

# Redis Configuration (Spring Boot 표준 환경변수)
SPRING_DATA_REDIS_HOST=localhost
SPRING_DATA_REDIS_PORT=6379
SPRING_DATA_REDIS_PASSWORD=<redis_password>

# Security Configuration
# Spring Boot Actuator 인증 (최소 16자 권장, 운영 환경 필수)
ACTUATOR_USERNAME=<actuator_username>
ACTUATOR_PASSWORD=<actuator_password_minimum_16_chars>

# Redis 키 HMAC-SHA256 서명 시크릿 (최소 32자)
# 생성 방법: openssl rand -base64 32
REDIS_KEY_HMAC_SECRET=<hmac_secret_minimum_32_chars_base64>

# KIS 토큰 AES-256 암호화 키 (Base64 인코딩된 32바이트)
# 생성 방법: openssl rand -base64 32
TOKEN_ENCRYPTION_KEY=<encryption_key_base64_32_bytes>

# KIS (Korea Investment & Securities) API Configuration
# 한국투자증권 ID
KIS_ID=<kis_id>

# 퇴직연금 계좌
KIS_ACCOUNT_PENSION_NUMBER=<account_number>
KIS_ACCOUNT_PENSION_APP_KEY=<app_key>
KIS_ACCOUNT_PENSION_APP_SECRET=<app_secret>

# 개인투자 계좌
KIS_ACCOUNT_PERSONAL_NUMBER=<account_number>
KIS_ACCOUNT_PERSONAL_APP_KEY=<app_key>
KIS_ACCOUNT_PERSONAL_APP_SECRET=<app_secret>
